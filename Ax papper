
#include <stdio.h>
#include <math.h>
int main (void)
{

double  x_dim = 210, y_dim = 297; // Helst anv√§nda float
int  i, size;
char A;

	printf("What size between A0 and A1000 do you want to calculate?  ");
	scanf("%c%i", &A, &size);

if (size == 4){						//errors
		printf("%f x %f", x_dim, y_dim);
	}
	else if (size < 4) {
		for (i = 1 ; i <= 4-size; ++i )
		{
			x_dim *= 2;
			y_dim *= 2; } }
	else
		for (i = 1; i <= size - 4; ++i)
		{
			 x_dim /=2;
			 y_dim /=2;
		}

	printf("%g x %g", x_dim, y_dim);

	return 0;
}


